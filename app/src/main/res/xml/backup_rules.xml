    <!-- Exclude sensitive SharedPreferences from backup -->
    <exclude domain="sharedpref" path="kidsview_prefs.xml"/>
    <exclude domain="sharedpref" path="admob_cooldown_prefs.xml"/>
    
    <!-- Include other app data (themes, preferences that are not sensitive) -->
    <!-- Note: Most data is stored in SharedPreferences which we exclude above -->
</full-backup-content>